---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPost = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Mi blog de Astro apendizaje";
---
<BaseLayout pageTitle={pageTitle}>

    <h2>{pageTitle}</h2>
    <p>Aquí es donde publicaré acerca de mi viaje aprendiendo Astro.</p>
    <ul>
      {allPost.map((post)=> <BlogPost url={post.url} title={post.frontmatter.title}/>)}
    </ul>

  </BaseLayout>